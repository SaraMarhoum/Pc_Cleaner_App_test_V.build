        <TextBlock x:Name="txt_version" Grid.Column="0" Text="Version 0.0.0" Margin="126,448,5.4,10.2" Foreground="White"></TextBlock>


        <TextBlock x:Name="txt_analyse" Text="Analyse du PC nécessaire" Margin="98.6,20,143,410.2" Grid.Column="1" FontSize="25" Foreground="White" Grid.ColumnSpan="2" FontWeight="Bold"/>
