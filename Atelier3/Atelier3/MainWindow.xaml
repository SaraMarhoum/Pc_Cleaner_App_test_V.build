        <ProgressBar x:Name="bar_progress" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="293" Grid.ColumnSpan="2" Grid.Column="1" Margin="99.6,73,0,0" BorderBrush="{x:Null}" Visibility="Hidden">
