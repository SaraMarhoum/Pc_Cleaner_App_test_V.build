        </Button>
        <Button x:Name="btn_majGrid" Content="METTRE A JOUR" Grid.Column="2" Margin="298,191,45.6,111.2" Grid.ColumnSpan="2" Foreground="White" BorderBrush="{x:Null}" Padding="1,40,1,1" FontWeight="Bold" Click="btn_majGrid_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" Opacity="0.75">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
