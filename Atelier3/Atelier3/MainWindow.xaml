        <Button x:Name="btn_histoGrid" Content="HISTORIQUE" Grid.Column="2" Margin="100,191,157,111.2" BorderBrush="{x:Null}" Padding="1,40,1,1" FontWeight="Bold" Click="btn_histoGrid_Click">
            <Button.Foreground>
                <SolidColorBrush Color="White"/>
            </Button.Foreground>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" Opacity="0.75">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                            <SkewTransform CenterY="0.5" CenterX="0.5"/>
                            <RotateTransform Angle="194.03600000000003" CenterY="0.5" CenterX="0.5"/>
